<div class="container-fluid">
    <div class="row full-height">
        <!-- Left Section with Image -->
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center p-0 full-height image-half">
            <img src="~/images/dominos_background.jpg" class="img-fluid w-100 h-100" alt="PizzaShop Background"
                style="object-fit: cover;">
        </div>

        <!-- Right Section with Reset Password Form -->
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center full-height content-half"
            style="background-color: #d8e8f8;">
            <div class="w-75">

                <!-- Logo and Title -->
                <div class="text-center mb-4">
                    <img src="~/images/logos/pizzashop_logo.png" alt="PizzaShop Logo" class="img-fluid" width="50"
                        height="50">
                    <h1 class="text-primary m-0">PIZZASHOP</h1>
                </div>

                <h3 class="mb-4 text-left">Forgot Password</h3>

                <!-- Reset Password Form -->
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                    <div class="mb-3 input-group">
                        <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" />
                    </div>
                    <div class="mb-3 input-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your new password" />
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <a href="index.html" class="mt-2" style="text-decoration: none;">Back to login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
