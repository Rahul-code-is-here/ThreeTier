@model PizzaShop.Domain.ViewModels.ChangePasswordModel


<div class="d-flex mt-3 p-3 justify-content-between">
    <div class="h2 blue-color"><strong>Change Password</strong></div>
</div>
<small class="sidebar-name">Enter a new password to update your account credentials</small>
<form asp-action="ChangePassword" class="w-25" method="post">
    <div class="form-group mt-2">
        <label>Current Password</label>
        <input asp-for="CurrentPassword" type="password" class="form-control" id="currentPassword" required />
    </div>
    <span asp-validation-for="CurrentPassword" class="text-danger"></span>

    <div class="form-group">
        <label>New Password</label>
        <input asp-for="NewPassword" type="password" class="form-control" required />
    </div>
    <span asp-validation-for="NewPassword" class="text-danger"></span>

    <div class="form-group">
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
    </div>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    <button type="submit" class="btn btn-primary mt-4 ">Change Password</button>
</form>

