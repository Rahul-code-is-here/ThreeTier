
@{
    ViewData["Title"] = "Forgot Password";
}
@* @model ForgotPasswordViewModel; *@


<h1>@ViewData["Title"]</h1>

@model PizzaShop.Domain.ViewModels.ForgotPasswordModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>forgotPassword</title>


    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row full-height">
            <!-- Left Section with Image -->
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center p-0 full-height image-half">
                <img src="~/images/dominos_background.jpg" class="img-fluid w-100 h-100"
                    alt="PizzaShop Background" style="object-fit: cover;">
            </div>

            <!-- Right Section with Login Form -->
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center full-height content-half"
                style="background-color: #d8e8f8;">
                <div class="w-75">

                    <!-- Logo and Title -->
                    <div class="text-center mb-4">
                        <img src="~/images/logos/pizzashop_logo.png" alt="PizzaShop Logo" class="img-fluid"
                            width="50" height="50">
                        <h1 class="text-primary m-0">PIZZASHOP</h1>
                    </div>


                    <h3 class="mb-4 text-left">Forgot Password</h3>

                    <!-- Login Form -->
                    <form id="loginForm" asp-controller="Login" asp-action="Forgot" method="post">

                        <!-- Email Input -->
                        <div class="mb-3 input-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                            <span class="input-group-text bg-white">
                                <img src="~/images/Default_pfp.svg.png" height="24px" width="24px"
                                    alt="User Icon">
                            </span>
                        </div>


                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit"  class="btn btn-primary w-100">Send</button>
                        </div>
                        <div class="d-flex align-items-center justify-content-center">
                            <a asp-controller="Home" asp-action="Index" class="mt-2" style="text-decoration: none;">Back to login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="js/bootstrap.bundle.min.js"></script>
</body>

</html>