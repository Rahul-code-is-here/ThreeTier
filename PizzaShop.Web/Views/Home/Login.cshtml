@{
    ViewData["Title"] = "Login Page";
}
@model PizzaShop.Domain.ViewModels.LoginModel  
   <div class="container-fluid">
        <div class="row full-height">
            <!-- Left Section with Image -->
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center p-0 full-height image-half">
                <img src="~/images/dominos_background.jpg" class="img-fluid w-100 h-100"
                    alt="PizzaShop Background" style="object-fit: cover;">
            </div>

            <!-- Right Section with Login Form -->
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center full-height content-half"
                style="background-color: #d8e8f8;">
                <div class="w-75">

                    <!-- Logo and Title -->
                    <div class="text-center mb-4">
                        <img src="~/images/logos/pizzashop_logo.png" alt="PizzaShop Logo" class="img-fluid"
                            width="50" height="50">
                        <h1 class="text-primary m-0">PIZZASHOP</h1>
                    </div>

                    <!-- Welcome Message -->
                    <h3 class="mb-4 text-left">Welcome,</h3>

                    <!-- Login Form -->
                    <form id="loginForm" asp-action="Login">
                        <!--   <   <span class="input-group-text bg-white">
                                <img src="/Pizza_Shop/images/Default_pfp.svg.png" height="24px" width="24px"
                                    alt="User Icon">
                            </span>-->

                        <!-- Email Input -->
                        <div class="form-floating">
                            <input style="position: relative;" type="email" class="form-control" id="email"
                                placeholder="email" asp-for="Email">
                            
                                <img src="~/images/Default_pfp.svg.png" height="24px"
                                    style=" cursor: pointer; position: absolute;  right: 10px; margin-top: -37px;"
                                    width="24px" alt="User Icon">

                                    <span asp-validation-for="Email" class="text-danger"></span>
                           
                            <label for="floatingPassword">Email*</label>
                        </div>
                        <small class="text-danger d-none" id="emailError">Email is required.</small>

                        <!-- Password Input -->
                        <div class="form-floating mt-4">
                            <input style="position: relative;" type="password" class="form-control" id="password"
                                placeholder="Password" asp-for="password">
                            <i class="far fa-eye" id="togglePassword"
                                style=" cursor: pointer; position: absolute;  right: 10px; margin-top: -37px;"></i>
                                <span asp-validation-for="password" class="text-danger"></span>
                            <label for="floatingPassword">Password*</label>
                        </div>
                        <small class="text-danger d-none" id="passwordError">Password is required.</small>

                        <!-- Remember Me and Forgot Password -->
                        <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe" asp-for="RememberMe">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>
                            <a asp-controller="Auth" asp-action="Forgot" class="text-primary " style="text-decoration: none;" >Forgot
                                Password?</a>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-floating text-center">
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
        <script>
        const eyebtn = document.getElementById("togglePassword");
        const passfield = document.getElementById('password');
        togglePassword.addEventListener('click', function (e) {
            const type = passfield.getAttribute('type') === 'password' ? 'text' : 'password';
            passfield.setAttribute('type', type);
            this.classList.toggle('fa-eye-slash');
        });
    </script>

        });
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
